{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "lib": ["es6", "es2015", "dom"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmit": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        "outDir": "lib",
        "skipLibCheck": true,
        "resolveJsonModule": true,
        // "rootDir": "src",
        "strict": true,
        "target": "es2017",
        "types": ["node"]
    }
}
